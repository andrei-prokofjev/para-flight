<resources>


  <!--  MeterView-->
  <style name="TextAppearance.MeterView" parent="android:TextAppearance">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">@font/roboto_medium</item>
  </style>

  <style name="TextAppearance.MeterView.Name" parent="TextAppearance.MeterView" />

  <style name="TextAppearance.MeterView.Title" parent="TextAppearance.MeterView" />

  <style name="TextAppearance.MeterView.Info" parent="TextAppearance.MeterView">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/roboto_black</item>
  </style>

  <style name="TextAppearance.MeterView.Amount" parent="TextAppearance.MeterView">
    <item name="android:textSize">46sp</item>
    <item name="android:fontFamily">@font/roboto_black</item>
  </style>

  <style name="TextAppearance.MeterView.Unit" parent="TextAppearance.MeterView" />

  <!--  Settings-->
  <style name="TextAppearance.Settings" parent="android:TextAppearance">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="TextAppearance.Settings.Title" parent="TextAppearance.Settings">
    <item name="android:textSize">18sp</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <!--  Logbook-->
  <style name="TextAppearance.Logbook.Title" parent="TextAppearance.Settings">
    <item name="android:textSize">20sp</item>
    <item name="fontFamily">@font/roboto_bold</item>
    <item name="textAllCaps">true</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="TextAppearance.Logbook.Info" parent="TextAppearance.Settings">
    <item name="android:textSize">16sp</item>
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <!--  About-->
  <style name="TextAppearance.About" parent="android:TextAppearance">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="TextAppearance.About.Info" parent="TextAppearance.About">
    <item name="android:textSize">20sp</item>
    <item name="fontFamily">@font/roboto_regular</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:textColor">@color/black</item>
  </style>

</resources>