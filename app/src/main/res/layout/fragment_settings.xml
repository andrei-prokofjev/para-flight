<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:keepScreenOn="true">

  <com.google.android.gms.common.SignInButton
      android:id="@+id/googleSignButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginBottom="20dp"
      android:paddingBottom="@dimen/activity_vertical_margin"
      app:buttonSize="icon_only"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />


  <ImageButton
      android:id="@+id/backImageButton"
      style="@style/Paraflight.Button.Default"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginTop="40dp"
      android:src="@drawable/ic_arrow_back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/roboto_medium"
      style="@style/TextAppearance.Settings.Title"
      android:padding="8dp"
      android:text="@string/take_off_detection"
      app:layout_constraintBottom_toTopOf="@id/takeOffDetectionLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/takeOffDetectionLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginTop="120dp"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:background="@drawable/bg_construction_module"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/speed"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/takeOffSpeedPicker"
        app:layout_constraintEnd_toEndOf="@id/takeOffSpeedPicker"
        app:layout_constraintStart_toStartOf="@id/takeOffSpeedPicker" />

    <NumberPicker
        android:id="@+id/takeOffSpeedPicker"
        style="@style/Paraflight.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/takeOffAltDiffPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/km_h"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/takeOffSpeedPicker"
        app:layout_constraintStart_toEndOf="@id/takeOffSpeedPicker"
        app:layout_constraintTop_toTopOf="@id/takeOffSpeedPicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/alt_diff"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/takeOffAltDiffPicker"
        app:layout_constraintEnd_toEndOf="@id/takeOffAltDiffPicker"
        app:layout_constraintStart_toStartOf="@id/takeOffAltDiffPicker" />

    <NumberPicker
        android:id="@+id/takeOffAltDiffPicker"
        style="@style/Paraflight.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/minFlightSpeedPicker"
        app:layout_constraintStart_toEndOf="@id/takeOffSpeedPicker"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/m"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/takeOffAltDiffPicker"
        app:layout_constraintStart_toEndOf="@id/takeOffAltDiffPicker"
        app:layout_constraintTop_toTopOf="@id/takeOffAltDiffPicker" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/min_speed"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/minFlightSpeedPicker"
        app:layout_constraintEnd_toEndOf="@id/minFlightSpeedPicker"
        app:layout_constraintStart_toStartOf="@id/minFlightSpeedPicker" />

    <NumberPicker
        android:id="@+id/minFlightSpeedPicker"
        style="@style/Paraflight.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/takeOffAltDiffPicker"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/km_h"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/minFlightSpeedPicker"
        app:layout_constraintStart_toEndOf="@id/minFlightSpeedPicker"
        app:layout_constraintTop_toTopOf="@id/minFlightSpeedPicker" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/voiceGuidanceLayout"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:background="@drawable/bg_construction_module"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/takeOffDetectionLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/voice_guidance"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/voiceGuidanceSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/unitsLayout"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:background="@drawable/bg_construction_module"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/voiceGuidanceLayout">

    <RadioGroup
        android:id="@+id/unitsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <RadioButton
          android:id="@+id/metricRadioButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:text="@string/metric"
          android:textColor="@color/black"
          android:textSize="20dp" />

      <RadioButton
          android:id="@+id/imperialRadioButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:text="@string/imperial"
          android:textColor="@color/black"
          android:textSize="20dp" />
    </RadioGroup>


    <!--    <TextView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="@dimen/activity_horizontal_margin"-->
    <!--        android:text="@string/metric"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textSize="20dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->


  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
