<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">


  <FrameLayout
      android:id="@+id/mapboxLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  <com.apro.paraflight.ui.mapbox.customview.MeterView
      android:id="@+id/speedMeterView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.apro.paraflight.ui.mapbox.customview.MeterView
      android:id="@+id/fuelMeterView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toEndOf="@+id/speedMeterView"
      app:layout_constraintTop_toTopOf="parent" />

  <com.apro.paraflight.ui.mapbox.customview.MeterView
      android:id="@+id/altitudeMeterView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
