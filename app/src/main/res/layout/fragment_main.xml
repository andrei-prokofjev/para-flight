<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


  <FrameLayout
      android:id="@+id/mapboxLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="-120dp" />


  <ImageView
      android:id="@+id/menuImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/bg_button"
      android:elevation="4dp"
      android:foreground="@drawable/selector_button_dark"
      android:padding="8dp"
      android:src="@drawable/ic_menu"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/compassImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/bg_button"
      android:elevation="2dp"
      android:foreground="@drawable/selector_button_dark"
      android:padding="8dp"
      android:src="@drawable/ic_compass"
      app:layout_constraintBottom_toTopOf="@id/nearMeImageView"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/nearMeImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/bg_button"
      android:elevation="2dp"
      android:foreground="@drawable/selector_button_dark"
      android:padding="8dp"
      android:src="@drawable/ic_near_me"
      app:layout_constraintBottom_toTopOf="@id/myLocationImageView"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/myLocationImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/bg_button"
      android:elevation="2dp"
      android:foreground="@drawable/selector_button_dark"
      android:padding="8dp"
      android:src="@drawable/ic_my_location"
      app:layout_constraintBottom_toTopOf="@id/layerImageView"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="ContentDescription" />

  <ImageView
      android:id="@+id/layerImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="80dp"
      android:background="@drawable/bg_button"
      android:elevation="2dp"
      android:foreground="@drawable/selector_button_dark"
      android:padding="8dp"
      android:src="@drawable/ic_layers"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>
